@code {
    private IList<string> qs = new List<string>
    {
        "Imagenes/qs1.jpg", "Imagenes/qs3.jpg", "Imagenes/qs4.jpg"
    };

    private int selectedIndex = 0;
    private string[] images = { "Imagenes/imagen1.jpg", "Imagenes/imagen2.jpg", "Imagenes/imagen3.jpg" };
    private string[] ms = { "Imagenes/ms1.jpg", "Imagenes/ms2.jpg" };
    private string[] vs = { "Imagenes/vs1.jpg", "Imagenes/vs2.jpg" };
    private int currentIndex = 0;
    private string currentImage;
    private Timer timer;
    private bool fade = false;

    private int currentIndexMs = 0;
    private string currentImageMs;
    private Timer timerMs;
    private bool fadeMs = false;

    private int currentIndexVs = 0;
    private string currentImageVs;
    private Timer timerVs;
    private bool fadeVs = false;
   

    protected override void OnInitialized()
    {
        currentImage = images[currentIndex];
        timer = new Timer(ChangeImage, null, 0, 6000);
        timerMs = new Timer(ChangeImageMs, null, 0, 6000);
        timerVs = new Timer(ChangeImageVs, null, 0, 6000);
    }

    private async void ChangeImage(object state)
    {
        fade = false; // Empezar desvanecimiento
        StateHasChanged();
        await Task.Delay(500); // Esperar el tiempo de desvanecimiento (500 ms)

        currentIndex = (currentIndex + 1) % images.Length;
        currentImage = images[currentIndex];
        fade = true; // Mostrar la nueva imagen
        StateHasChanged();
    }
    private async void ChangeImageMs(object state)
    {
        fadeMs = false; // Empezar desvanecimiento
        StateHasChanged();
        await Task.Delay(500); // Esperar el tiempo de desvanecimiento (500 ms)

        currentIndexMs = (currentIndexMs + 1) % ms.Length;
        currentImageMs = ms[currentIndexMs];
        fadeMs = true; // Mostrar la nueva imagen
        StateHasChanged();
    }
    private async void ChangeImageVs(object state)
    {
        fadeVs = false; // Empezar desvanecimiento
        StateHasChanged();
        await Task.Delay(500); // Esperar el tiempo de desvanecimiento (500 ms)

        currentIndexVs = (currentIndexVs + 1) % vs.Length;
        currentImageVs = vs[currentIndexVs];
        fadeVs = true; // Mostrar la nueva imagen
        StateHasChanged();
    }
}